<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FCalculate">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KALKULATOR"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukan Angka 1"/>


        <EditText
            android:id="@+id/bilangan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukan Angka 2"/>

        <EditText
            android:id="@+id/bilangan2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/proses"
                android:entries="@array/operasihitung"
                android:layout_width="170dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/hitung"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="HITUNG" />


        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil Akhir"/>

        <TextView
            android:id="@+id/output"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




    </LinearLayout>


</FrameLayout>